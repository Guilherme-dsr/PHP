<?php

$num = $_GET["num"];
$op = $_GET["op"];
switch ($op) {
	case '1':
	echo "O dobro é: ".$num*2;
		break;
	case '2':
	echo "O cubo é: ".$num*$num*$num;
		break;
		case '3':
	echo "A  raiz é: ".sqrt($num);
		break;
	default:
	echo "Erro";
		break;
}

?>
